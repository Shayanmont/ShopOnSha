<!DOCTYPE html>
<html>
<head>
  <title>ShopOnSHA Online Store</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag    "ShopOnSHA", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
	<div id="banner">
		<%= image_tag("logo.jpg") %>
		<%= @page_title || "ShopOnSHA Online Store"%>
	</div>

	<div id="columns">
		<div id="side">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
					<%= render @cart %>
				<% end %>
			<% end %> 
			
			<a href="http://localhost:3000/">Home</a><br />
			<a href="http://localhost:3000/orders/">Orders</a><br />
			<a href="http://localhost:3000/products/">Products</a><br />
		</div>

		<div id="main">
			<%= yield %>
		</div>

	</div>

</body>
</html>
